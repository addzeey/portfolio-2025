---
import Logo from "./Logo.astro";
---

<nav class="nav">
	<div class="container">
		<div class="nav-content">
			<div class="logo">
				<!-- svg logo image -->
				<a class="logo-text" href="/">
                	<Logo />
					<span class=" font-retro">Adam Ashdown</span>
				</a>
			</div>
			<ul class="nav-links font-retro">
				<li><a href="/#about">About</a></li>
				<li><a href="/#skills">Skills</a></li>
				<li><a href="/#projects">Projects</a></li>
				<li><a href="/#contact">Contact</a></li>
			</ul>
		</div>
	</div>
</nav>

<style>
	.nav {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		backdrop-filter: blur(10px);
		border-bottom: 1px solid rgba(56, 20, 96, 0.3);
		z-index: 1000;
		transition: all 0.3s ease;
	}

	.nav.scrolled {
		background: rgba(10, 10, 18, 0.95);
	}

	.nav.scrolled {
		background: rgba(10, 10, 18, 0.8);
		backdrop-filter: blur(5px);
	}

	.nav-content {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 16px 0;
	}
	.logo {
		display: flex;
		align-items: center;
		gap: 12px;
		transition: 0.3s ease;
	}
	.logo-text {
		font-size: 26px;
		letter-spacing: 1px;
		font-weight: 600;
		color: #fffff;
		display: flex;
		align-items: center;
		gap: 12px;
	}

	a.logo-text:hover  {
		color: var(--accent);
	}
	.logo:hover {
		transform: scale(1.1);
		color: var(--accent);
	}
	a.logo-text {
		text-decoration: none;
		color: var(--text-light);
		transition: color 0.3s ease;
	}

	.nav-links {
		display: flex;
		list-style: none;
		gap: 22px;
		font-size: 22px;
	}

	.nav-links a {
		text-decoration: none;
		color: var(--text-light);
		font-weight: 500;
		position: relative;
		padding: 8px 16px;
		border-radius: 20px;
		transition: all 0.3s ease;
		overflow: hidden;
	}

	.nav-links a:hover {
		color: var(--accent);
		background: rgba(178, 31, 102, 0.1);
		transform: translateY(-2px);
		box-shadow: 0 4px 15px rgba(178, 31, 102, 0.3);
	}

	.nav-links a:hover::before {
		left: 100%;
	}

	.nav-links a.active {
		color: var(--accent);
		background: rgba(178, 31, 102, 0.15);
		font-weight: 700;
		box-shadow: 0 2px 10px rgba(178, 31, 102, 0.15);
	}

	@media (max-width: 768px) {
		.nav-links {
			display: none;
		}
	}
</style>
